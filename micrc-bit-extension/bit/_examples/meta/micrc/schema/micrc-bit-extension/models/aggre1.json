{
  "openapi": "3.0.3",
  "info": {
    "title": "某聚合schema",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {
      "userId": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          }
        },
        "x-validators": {
          "normal": {
            "required": ["id"]
          },
          "init": {
            "properties": {
              "id": {
                "enum": ["-1"]
              }
            }
          }
        }
      },
      "user": {
        "type": "object",
        "properties": {
          "userId": {
            "$ref": "#/components/schemas/userId"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "repeatPassword": {
            "type": "string",
            "format": "password"
          }
        },
        "x-validators": {
          "normal": {
            "required": ["userId", "username", "password", "repeatPassword"],
            "properties": {
              "userId": {
                "$ref": "#/components/schemas/userId/x-validators/normal"
              }
            },
            "errorMessage": "属性必须都存在"
          },
          "init": {
            "required": ["username", "password", "repeatPassword"],
            "properties": {
              "userId": {
                "$ref": "#/components/schemas/userId/x-validators/init"
              },
              "username": {
                "pattern": "/^.*$/",
                "minLength": 6,
                "maxLength": 15,
                "errorMessage": {
                  "pattern": "必须符合pattern",
                  "minLength": "必须大于6个字符",
                  "maxLength": "用户最多15个字符"
                }
              },
              "password": {
                "pattern":"^(?=.*[A-Za-z])(?=.*\\d)[A-Za-z\\d]{8,}$",
                "minLength": 8,
                "maxLength": 20,
                "errorMessage": {
                  "pattern": "密码必须xxxx且xxxx",
                  "minLength": "密码必须大于8位",
                  "maxLength": "密码不能超过20位"
                }
              },
              "repeatPassword": {
                "const": {
                  "$data": "/password"
                }
              }
            },
            "errorMessage": {
              "required": {
                "username": "用户名必须填写"
              }
            }
          }
        }
      }
    }
  },
  "paths": {}
}
